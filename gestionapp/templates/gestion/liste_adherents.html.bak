{% extends 'base.html' %}

{% block title %}Liste des Adherents{% endblock %}

{% block content %}
<a href="{% url 'gestion:adherent_create' %}" style="margin-bottom: 20px; display: inline-block;">Ajouter un nouvel adherent</a>

<ul>
    {% for adherent in adherents %}
    <li>
        <a href="{% url 'gestion:adherent_detail' pk=adherent.pk %}">
            {{ adherent.prenom }} {{ adherent.nom }}
        </a>
    </li>
    {% empty %}
    <li>Aucun adherent trouve.</li>
    {% endfor %}
</ul>
{% endblock %}